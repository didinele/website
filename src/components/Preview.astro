---
import clsx from 'clsx';

export interface Props {
	path: string;
	thumbnailUrl?: string;
	title: string;
}

const linkClasses = clsx(
	'flex',
	'flex-col',
	'p-4',
	'rounded-lg',
	'border-2',
	'border-zinc-300/50',
	'dark:border-zinc-700/50',
	'hover:boder-zinc-300/75',
	'dark:hover:border-zinc-700/75',
	'bg-zinc-100/50',
	'dark:bg-zinc-900/50',
	'hover:bg-zinc-100/75',
	'dark:hover:bg-zinc-900/75',
);
---

<a class={linkClasses} href={Astro.props.path}>
	{Astro.props.thumbnailUrl && <img src={Astro.props.thumbnailUrl} />}
	<h2 class="text-2xl font-bold">{Astro.props.title}</h2>
	<h3 class="text-zinc-500">{Astro.props.path}</h3>
</a>
